@model IEnumerable<Inventory.Models.MemberList>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Register New Member", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{ 
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MemberId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisteredDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MemberId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MemberName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegisteredDate)
        </td>
        <td>
            <span>
                <button class="edit-btn">
                    @Html.ActionLink("Edit", "Edit", new { id = item.MemberId })
                </button>
            </span>
            <span>
                <button class="details-btn">
                    @Html.ActionLink("Details", "Details", new { id = item.MemberId })
                </button>
            </span>
            <span>
                <button class="delete-btn">
                    @Html.ActionLink("Delete", "Delete", new { id = item.MemberId })
                </button>
            </span>
        </td>
    </tr>
}

</table>
